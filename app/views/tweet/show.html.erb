<div class="wrap">
  <div class="header">
    <%= image_tag 'logo.png', :size => '300x104' %>
    <div class="wrapper">
    <div class="box"><p class="doing_now">今なにしてる？</p></div>
    </div>
    <form method="POST" action="/tweet/show">
      <textarea id="tweeting-content" name="body"></textarea>
      <p class="submit"><input type="submit" value="つぶやく"></p>
    </form>
  </div>
  <div class="content">
    <% @list.each do |tweet| %>
        <blockquote class="speech-bubble">
          <p>
            <%= tweet.body %>
            <br><span class="tweet_time"><%= tweet.dateposted %></span>
          </p>
        </blockquote>
    <% end %>
  </div>
</div>